package array;

public class Array {
	public static int minElement(int[] array){
		if (array == null) {
			throw new IllegalArgumentException("array must be not null");
		}
		if (array.length == 0) {
			throw new IllegalArgumentException("array must be not empty");
		}
		int min = array[0];
		for (int i: array) {
			if (i < min) {
				min = i;
			}
		}
		return min;
	}
	
	public static int maxElement(int[] array){
		if (array == null) {
			throw new IllegalArgumentException("array must be not null");
		}
		if (array.length == 0) {
			throw new IllegalArgumentException("array must be not empty");
		}
		int max = array[0];
		for (int i: array) {
			if (i < min) {
				min = i;
			}
		}
		return min;
	}
}
